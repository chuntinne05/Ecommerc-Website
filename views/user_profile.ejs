    <div class="profile_container">
        <div class="sidebar">
            <div class="user-header">
                <div class="user-icon"></div>
                <div>
                    <div>Tin Trung</div>
                    <div style="color: #999;">10:20:12 PM</div>
                </div>
            </div>

            <div class="menu">
                <div class="menu-item active" data-target="profile">
                    汨､ My Profile
                </div>
                <div class="menu-item" data-target="delivery">
                    泅 Delivery Address <span style="background-color: white; color: black; border-radius: 10px; padding: 2px 5px; margin-left: 5px;">4</span>
                </div>
                <div class="menu-item" data-target="orders">
                    沒ｦ My Orders <span style="background-color: white; color: black; border-radius: 10px; padding: 2px 5px; margin-left: 5px;">0</span>
                </div>
                <div class="menu-item" data-target="password">
                    沐 Change Password
                </div>
                <div class="menu-item" data-target="logout">
                    泅ｪ Log Out
                </div>
            </div>
        </div>
        <div class="container2">
            <div class="greeting">
                <h2>Good evening</h2>
            </div>
            <div class="profile_content">
                <div id="profile" class="content-section active">
                    <form action="/user_profile" method="post">
                        <div>
                            <label for="first_name">First Name : </label>
                            <input type="text" name="first_name" id="first_name" value="<%= user.first_name ? user.first_name : '' %>" required>
                        </div>
                        <div>
                            <label for="last_name">Last Name : </label>
                            <input type="text" name="last_name" id="last_name" value="<%= user.last_name ? user.last_name : '' %>" required>
                        </div>
                        <div>
                            <label>Gender</label>
                            <div class="gender-options">
                                <label>
                                    <input type="radio" name="gender" value="male"> Male
                                </label>
                                <label>
                                    <input type="radio" name="gender" value="female"> Female
                                </label>
                                <label>
                                    <input type="radio" name="gender" value="other"> Other
                                </label>
                            </div>
                        </div>
                        <div>
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" value="<%= user.email ? user.email : '' %>" required>
                        </div>
                        <div>
                            <label for="phone">Phone number : </label>
                            <input type="tel" name="phone" id="phone" value="<%= user.phone ? user.phone : '' %>" required>
                        </div>
                        <button type="submit">Lﾆｰu thay ﾄ黛ｻ品</button>
                    </form>
                </div>
                <div id="delivery" class="content-section">
                    <h2>Delivery Address</h2>
                    <form id="deliveryForm" action="/update_delivery_address" method="post">
                        <div>
                            <label for="house_number">House Number:</label>
                            <input type="text" name="house_number" id="house_number" value="<%= address && address.house_number ? address.house_number : '' %>" required>
                        </div>
                        <div>
                            <label for="street">Street (District):</label>
                            <input type="text" name="street" id="street" value="<%= address && address.street ? address.street : '' %>" required>
                        </div>
                        <div>
                            <label for="receiver_name">Receiver Name:</label>
                            <input type="text" name="receiver_name" id="receiver_name" value="<%= address && address.receiver_name ? address.receiver_name : '' %>" required>
                        </div>
                        <div>
                            <label for="receiver_phone">Receiver Phone:</label>
                            <input type="tel" name="receiver_phone" id="receiver_phone" value="<%= address && address.receiver_phone ? address.receiver_phone : '' %>" required>
                        </div>
                        <div>
                            <label for="address_type">Address Type:</label>
                            <select name="address_type" id="address_type" required>
                                <option value="home" <%= address && address.address_type === 'home' ? 'selected' : '' %>>Home</option>
                                <option value="work" <%= address && address.address_type === 'work' ? 'selected' : '' %>>Work</option>
                                <option value="school" <%= address && address.address_type === 'school' ? 'selected' : '' %>>School</option>
                                <option value="other" <%= address && address.address_type === 'other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>
                        <div>
                            <label for="notes">Notes:</label>
                            <textarea name="notes" id="notes"><%= address && address.notes ? address.notes : '' %></textarea>
                        </div>
                        <button type="submit">Save Delivery Address</button>
                    </form>
                </div>
                <div id="orders" class="content-section">
                    My Orders Content
                </div>
                <div id="password" class="content-section">
                    Change Password Content
                </div>
                <div id="logout" class="content-section">
                    Log Out Confirmation
                </div>
            </div>
        </div>
    </div>
    <script>
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.menu-item').forEach(el => {
                    el.classList.remove('active');
                });

                this.classList.add('active');

                document.querySelectorAll('.content-section').forEach(section => {
                    section.classList.remove('active');
                });

                const targetId = this.getAttribute('data-target');
                document.getElementById(targetId).classList.add('active');
            });
        });
    </script>
</body>
